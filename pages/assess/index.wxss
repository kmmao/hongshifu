  left: calc(50% - 40rpx);
  content: ' ';
  height: 0;
  width: 0;
  border-style: solid;
  border-width: 50rpx 40rpx;
  border-color: transparent transparent #f4f4f4;
  transform: skewX(-30deg)
}
