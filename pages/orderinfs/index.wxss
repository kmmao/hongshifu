page{
  background-color: #f2f2f2;
}
.order-page{
  font-size: 28rpx;
  color: #666;
}
.order-logo{
  width: 127rpx;
  height: 127rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.pcont3{color: #000}
.order-pa1,.order-pa2,.order-pa3{ 
  background-color: #fff;
  margin-top:30rpx;
  margin-bottom: 30rpx;
}
.order-pa1{
  display: flex;
  padding: 45rpx 30rpx 25rpx;
  position: relative;
  overflow: hidden;
}
.order-pa1::after{
  position: absolute;
  content: "ä»£";
  width: 100rpx;
  height: 100rpx;
  background-color: #ff596a;
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
  line-height: 138rpx;
  vertical-align: baseline;
  text-align: left;
  text-indent: 20rpx;
  clip-path: polygon(0% 50%, 50% 50%, 50% 100%, 0% 100%);
  top:-50rpx;
  right: -50rpx;
}
.order-btn1,.order-btn3{
  position: absolute;
  right: 30rpx;
  bottom: 25rpx;
  font-size: 28rpx;
  line-height: 1.8;
  background-color: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.order-btn1{color: #ff596a;}
.order-btn3{color: #ff9902;}
.order-btn1::after,.order-btn1::before,.order-btn3::after,.order-btn3::before{border-color:currentColor;}
.htitle2,.htitle1{
  border-bottom: 2rpx solid #f2f2f2;
  padding: 20rpx 30rpx 20rpx 80rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  color: #000;
}
.order-pa2{
  padding-bottom: 20rpx;
}
.pcont1,.pcont2{
  margin: 10rpx 30rpx;
  display: flex;
  justify-content:space-between;
}
.picon1,.picon2{
  position: relative;
  padding-left: 40rpx;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.picon1::before,.picon2::before{
  position: absolute;
  content: " ";
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  top:20rpx;
  left: 0;
}
.picon1{
  margin-right: 30rpx;
  }
.picon1::before{background-color: #44bfa3;}
.picon2::before{background-color: #fe5252;}
